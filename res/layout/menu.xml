<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/id_img11"
                style="@style/imageview_for_leftmenu"
                android:src="@drawable/left_menu_feedback_btn" />

            <TextView
                style="@style/textview_in_leftmenu"
                android:layout_toRightOf="@id/id_img11"
                android:text="意见反馈" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/id_img2"
                style="@style/imageview_for_leftmenu"
                android:src="@drawable/left_menu_about_btn" />

            <TextView
                style="@style/textview_in_leftmenu"
                android:layout_toRightOf="@id/id_img2"
                android:text="关于我们"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:clickable="true">

            <ImageView
                android:id="@+id/id_img3"
                style="@style/imageview_for_leftmenu"
                android:src="@drawable/left_menu_trash_btn" />

            <TextView
                style="@style/textview_in_leftmenu"
                android:layout_toRightOf="@id/id_img3"
                android:text="清除缓存"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <ImageView
                android:id="@+id/id_img4"
                style="@style/imageview_for_leftmenu"
                android:src="@drawable/left_menu_logout_btn" />

            <TextView
                style="@style/textview_in_leftmenu"
                android:layout_toRightOf="@id/id_img4"
                android:text="退出登录"
                 />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>